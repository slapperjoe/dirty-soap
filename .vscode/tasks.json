{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "commitMessage",
            "type": "promptString",
            "description": "Enter Changelog Message (Paste from 'Generate Commit Message' if desired)"
        }
    ],
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$ts-webpack-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Version Bump Major",
            "type": "shell",
            "command": "npm run version-bump-major -- \"${input:commitMessage}\"",
            "problemMatcher": []
        },
        {
            "label": "Version Bump Minor",
            "type": "shell",
            "command": "npm run version-bump-minor -- \"${input:commitMessage}\"",
            "problemMatcher": []
        },
        {
            "label": "Version Bump Patch",
            "type": "shell",
            "command": "npm run version-bump-patch -- \"${input:commitMessage}\"",
            "problemMatcher": []
        }
    ]
}