{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "dirty-soap",
  "version": "0.1.0",
  "identifier": "com.dev1.dirtysoap",
  "build": {
    "frontendDist": "../webview-build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:webview",
    "beforeBuildCommand": "npm run compile-webview"
  },
  "app": {
    "windows": [
      {
        "title": "Dirty SOAP",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/dirty-soap-sidecar"
    ]
  }
}