{
  "name": "apinox",
  "publisher": "dev1",
  "displayName": "APInox",
  "description": "Visual SOAP client for VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/slapperjoe/apinox.git"
  },
  "icon": "images/logo.png",
  "license": "MIT",
  "version": "0.9.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/src/extension.js",
  "bin": {
    "apinox": "./out/src/cli/index.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "apinox.openInterface",
        "title": "Open Interface",
        "category": "APInox",
        "icon": "$(zap)"
      },
      {
        "command": "apinox.resetConfiguration",
        "title": "Reset Configuration (Hard Reset)",
        "category": "APInox",
        "icon": "$(trash)"
      },
      {
        "command": "apinox.exportDiagnostics",
        "title": "Export Diagnostic Logs",
        "category": "APInox",
        "icon": "$(output)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile-webview && tsc -p ./",
    "compile-webview": "cd webview && npm install && npm run build",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev:webview": "cd webview && npm run dev",
    "version-bump-major": "node scripts/bump.js major",
    "version-bump-minor": "node scripts/bump.js minor",
    "version-bump-patch": "node scripts/bump.js patch",
    "prepare": "npx simple-git-hooks",
    "build-cli": "tsc -p ./ && chmod +x ./out/src/cli/index.js 2>/dev/null || true",
    "cli": "node ./out/src/cli/index.js",
    "build-binary": "npm run compile && pkg ./out/src/cli/index.js --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path ./bin",
    "build-binary-win": "npm run compile && pkg ./out/src/cli/index.js --targets node18-win-x64 --out-path ./bin"
  },
  "pkg": {
    "scripts": [
      "out/src/cli/**/*.js",
      "out/src/services/**/*.js",
      "out/src/models.js"
    ],
    "assets": [],
    "outputPath": "bin"
  },
  "simple-git-hooks": {
    "pre-commit": ""
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sax": "^1.2.7",
    "@types/selfsigned": "^2.0.4",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitest/coverage-v8": "^4.0.16",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "jest": "^30.2.0",
    "mocha": "^10.2.0",
    "pkg": "^5.8.1",
    "simple-git-hooks": "^2.13.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.1.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "axios": "^1.13.2",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "fast-xml-parser": "^5.3.3",
    "https-proxy-agent": "^7.0.6",
    "jsonc-parser": "^3.3.1",
    "node-cron": "^4.2.1",
    "selfsigned": "^5.4.0",
    "soap": "^1.0.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  }
}