{
  "name": "apinox",
  "displayName": "APInox",
  "description": "A visual SOAP client desktop application",
  "repository": {
    "type": "git",
    "url": "https://github.com/slapperjoe/apinox.git"
  },
  "license": "MIT",
  "version": "0.15.0",
  "bin": {
    "apinox": "./out/src/cli/index.js"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "compile-webview": "cd src-tauri/webview && npm install && npm run build:skip-check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev:webview": "cd src-tauri/webview && npm run dev",
    "version-bump-major": "node scripts/bump.js major",
    "version-bump-minor": "node scripts/bump.js minor",
    "version-bump-patch": "node scripts/bump.js patch",
    "sync-version": "node sync-version.js",
    "prepare": "npx simple-git-hooks",
    "build-cli": "tsc -p ./ && chmod +x ./out/src/cli/index.js 2>/dev/null || true",
    "cli": "node ./out/src/cli/index.js",
    "build:sidecar": "cd sidecar && npm install && npm run build",
    "increment-build": "node increment-build.js",
    "prepare:sidecar": "cd sidecar && npm install && npm run binary && cd .. && node prepare-sidecar-binary.js",
    "tauri:dev": "npm run build:sidecar && cd src-tauri/webview && npm install && cd ../.. && npx tauri dev",
    "tauri:build": "npm run increment-build && npm run sync-version && npm run prepare:sidecar && cd src-tauri/webview && npm install && cd ../.. && npx tauri build"
  },
  "pkg": {
    "scripts": [
      "out/src/cli/**/*.js",
      "out/src/services/**/*.js",
      "out/src/models.js"
    ],
    "assets": [],
    "outputPath": "bin"
  },
  "simple-git-hooks": {
    "pre-commit": ""
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tauri-apps/cli": "^2.9.6",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sax": "^1.2.7",
    "@types/selfsigned": "^2.0.4",
    "@types/swagger-parser": "^4.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "jest": "^30.2.0",
    "mocha": "^10.2.0",
    "pkg": "^5.8.1",
    "simple-git-hooks": "^2.13.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.1.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "^2.5.0",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-shell": "^2.3.4",
    "@tauri-apps/plugin-store": "^2.4.2",
    "@types/node-cron": "^3.0.11",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "fast-xml-parser": "^5.3.3",
    "https-proxy-agent": "^7.0.6",
    "jsonc-parser": "^3.3.1",
    "node-cron": "^4.2.1",
    "selfsigned": "^5.4.0",
    "soap": "^1.0.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  }
}
